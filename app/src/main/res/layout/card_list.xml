<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/cardLinerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/uploadimage"
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/temp_image_complaint" />

                    <TextView
                        android:id="@+id/complaintid"
                        style="@style/Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ff7043"
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="5dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/districtName"
                            style="@style/Label.SubTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/sub_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:maxLines="2"
                            android:text=""
                            android:textColor="@color/black" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                app:cardBackgroundColor="#4000ff"
                                app:cardCornerRadius="2dp"
                                app:cardElevation="5dp">

                                <TextView
                                    android:id="@+id/datetime"
                                    style="@style/Label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:padding="5dp"
                                    android:text="17 June 2019"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/status_id"
                                style="@style/Label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:padding="5dp"
                                android:text=""
                                android:textColor="#66bb6a"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="5dp"
                android:layout_height="wrap_content">
            <Button
                android:id="@+id/takeAction"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="TakeAction"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/button_secondary_background"
                android:layout_height="wrap_content"/>
                <Button
                android:id="@+id/completed"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Completed"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/button_action_background"
                android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
