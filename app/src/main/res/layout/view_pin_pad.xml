<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/PinPadViewStyle">

    <!-- custom num pad -->
    <Button
        android:id="@+id/pin_numpad_1"
        style="@style/PinEntryStyle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/password_pin_numpad_element_space"
        android:text="1" />

    <Button
        android:id="@+id/pin_numpad_2"
        style="@style/PinEntryStyle"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/password_pin_numpad_element_space"
        android:layout_toRightOf="@id/pin_numpad_1"
        android:text="2" />

    <Button
        android:id="@+id/pin_numpad_3"
        style="@style/PinEntryStyle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/pin_numpad_2"
        android:text="3" />

    <Button
        android:id="@+id/pin_numpad_4"
        style="@style/PinEntryStyle"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/pin_numpad_1"
        android:layout_marginRight="@dimen/password_pin_numpad_element_space"
        android:layout_marginTop="@dimen/password_pin_numpad_element_space"
        android:text="4" />

    <Button
        android:id="@+id/pin_numpad_5"
        style="@style/PinEntryStyle"
        android:layout_below="@id/pin_numpad_2"
        android:layout_marginRight="@dimen/password_pin_numpad_element_space"
        android:layout_marginTop="@dimen/password_pin_numpad_element_space"
        android:layout_toRightOf="@id/pin_numpad_4"
        android:text="5" />

    <Button
        android:id="@+id/pin_numpad_6"
        style="@style/PinEntryStyle"
        android:layout_below="@id/pin_numpad_3"
        android:layout_marginTop="@dimen/password_pin_numpad_element_space"
        android:layout_toRightOf="@id/pin_numpad_5"
        android:text="6" />

    <Button
        android:id="@+id/pin_numpad_7"
        style="@style/PinEntryStyle"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/pin_numpad_4"
        android:layout_marginRight="@dimen/password_pin_numpad_element_space"
        android:layout_marginTop="@dimen/password_pin_numpad_element_space"
        android:text="7" />

    <Button
        android:id="@+id/pin_numpad_8"
        style="@style/PinEntryStyle"
        android:layout_below="@id/pin_numpad_5"
        android:layout_marginRight="@dimen/password_pin_numpad_element_space"
        android:layout_marginTop="@dimen/password_pin_numpad_element_space"
        android:layout_toRightOf="@id/pin_numpad_7"
        android:text="8" />

    <Button
        android:id="@+id/pin_numpad_9"
        style="@style/PinEntryStyle"
        android:layout_below="@id/pin_numpad_6"
        android:layout_marginTop="@dimen/password_pin_numpad_element_space"
        android:layout_toRightOf="@id/pin_numpad_8"
        android:text="9" />

    <Button
        android:id="@+id/pin_numpad_left_action"
        style="@style/PinEntryActionStyle"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/pin_numpad_7"
        android:layout_marginRight="@dimen/password_pin_numpad_element_space"
        android:layout_marginTop="@dimen/password_pin_numpad_element_space"
        android:visibility="invisible"
        tools:text="Delete" />

    <Button
        android:id="@+id/pin_numpad_0"
        style="@style/PinEntryStyle"
        android:layout_below="@id/pin_numpad_8"
        android:layout_marginRight="@dimen/password_pin_numpad_element_space"
        android:layout_marginTop="@dimen/password_pin_numpad_element_space"
        android:layout_toRightOf="@id/pin_numpad_left_action"
        android:text="0" />

    <ImageButton
        android:id="@+id/pin_numpad_right_action"
        style="@style/PinEntryActionStyle"
        android:layout_below="@id/pin_numpad_9"
        android:layout_marginTop="@dimen/password_pin_numpad_element_space"
        android:layout_toRightOf="@id/pin_numpad_0"
        android:src="@drawable/ic_backspace" />

</merge>