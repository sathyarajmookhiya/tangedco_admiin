<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/padding_internal_bigger" />
            <solid android:color="@color/light_gray" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/padding_internal_bigger" />
            <solid android:color="@color/login_button_bg_selected" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="@dimen/padding_internal" />
            <gradient android:angle="135" android:centerColor="@color/colorPrimary" android:endColor="@color/colorPrimaryDark" android:startColor="@color/colorPrimary" android:type="linear" />
        </shape>
    </item>

</selector>